extends ../layout

block content
 h1 Login
 form(action="/login", method="POST")
  label Email
  br
  input(placeholder="Enter your email", required=true, type="email", name="email")
  br
  label Password
  br
  input(placeholder="Enter your password", required=true, type="password", name="password")
  br
  button(type="submit") Login
  br
  | Don't have an account? 
  a(href="/signup") Signup here 
